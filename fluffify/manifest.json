{
	"manifest_version": 2,
	"name": "Fluffify for Chrome",
	"version": "1.7",
	"description": "Corporate phrases turn our stomach. We're replacing the terms we're so sick of hearing - to a fun equivalent. Contribute on GitHub!",
	"browser_action": {
		"default_icon": {
			"19": "images/fluff.png"
		},
		"default_popup": "popup.html",
		"default_title": "Fluffify"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"permissions": [
		"storage",
		"*://*/*"
	],
	"background": {
		"scripts": [
					"js/jquery-2.1.3.min.js",
					"js/background.js"
				],
				"persistent": false
	},
	"content_scripts":
	[
		{
			"matches": ["<all_urls>"],
			"css": ["css/content.css"],
			"js": [
				"js/jquery-2.1.3.min.js",
				"js/content_script.js"
			],
			"run_at": "document_end"
		}
	]
}

